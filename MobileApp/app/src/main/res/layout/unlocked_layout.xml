<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:paddingTop="20dp"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:textSize="30dp"
            android:text="Points of interest"
            android:textAlignment="center"/>
    </LinearLayout>


    <LinearLayout
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:paddingRight="10dp"
            android:layout_width="240dp"
            android:textAlignment="viewEnd"
            android:textSize="16sp"
            android:layout_height="20dp"
            android:textColor="#000"
            android:text="Sort by:"/>
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:entries="@array/sort_poi"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="1."/>
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="Torre de Belém" />
        <ImageView
            android:layout_weight="9"
            android:layout_width="fill_parent"
            android:padding="14dp"
            android:layout_height="44dp"
            android:src="@drawable/arrow"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="2dp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="2."/>
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="Praça do Comércio" />
        <ImageView
            android:layout_weight="9"
            android:layout_width="fill_parent"
            android:padding="14dp"
            android:layout_height="44dp"
            android:src="@drawable/arrow"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="2dp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="10dp"
            android:textSize="20dp"
            android:text="3."/>
        <TextView
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20dp"
            android:text="Castelo de S. Jorge" />
        <ImageView
            android:layout_weight="9"
            android:layout_width="fill_parent"
            android:padding="14dp"
            android:layout_height="44dp"
            android:src="@drawable/arrow"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="2dp"></LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/mapFab"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom|end"
        android:layout_marginTop="250dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/map" />
</LinearLayout>